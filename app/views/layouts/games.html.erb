<html>
  <head>
    <title>Dominion - Broken Model Games</title>
    <%= stylesheet_link_tag "dominion" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "jquery" %>
    <%= javascript_include_tag "jquery-ui" %>
    <% if @periodic_refresh_time -%>
      <meta http-equiv="refresh" content="<%= @periodic_refresh_time %>"/>
    <% end -%>
  </head>
  <script>
    $(document).ready(function() {
      document.onselectstart = function(){return false;}
      document.onmousedown = function(){ return false; }
    });
  </script>
<body>
<%= yield :layout %>

<%= image_tag("dominion.png", :id=>"logo") %>

<div id="new_game_buttons">
  <%= link_to "Exit or Start New Game", {:controller=>:games, :action=>:new_game},
        :confirm=>"Are you sure you want to quit this game?"%>
</div>

</body>
</html>

